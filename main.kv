#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import utils kivy.utils

<DrawerClickableItem@MDNavigationDrawerItem>

<LoginDialogContent>:
    orientation: "vertical"
    spacing: "0dp"
    size_hint_y: None
    height: "220dp"

    BoxLayout:
        orientation: 'vertical'
        # padding: ('0dp', '10dp', '0dp', '10dp')
        spacing: "3dp"
        size: '200dp','200dp'

        MDTextField:
            id: email_token
            hint_text: "Email"
        MDTextField:
            id: password_token
            hint_text: "Password"

        MDRaisedButton:
            text: "Sign in"
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            md_bg_color: utils.get_color_from_hex('#fa00df')
            # on_release:

        MDFlatButton:
            text: "Sign up"
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            # on_release:
        
        MDFlatButton:
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            text: "Sign in with Offline Account"
            # theme_text_color: "Custom"
            # text_color: self.theme_cls.primary_color





MDScreen:

    # MDFloatLayout:




    MDNavigationLayout:

        ScreenManager:

            MDScreen:

                MDBoxLayout:

                    MDNavigationRail:
                        id: navigation_rail
                        anchor: "top"
                        type: "unselected"
                        current_selected_item: 0

                        MDNavigationRailItem:
                            id: SidePannel_Menu
                            # text: "Account"
                            icon: "menu"
                            on_release: nav_drawer.set_state("open")

                        # MDNavigationRailMenuButton:
                        #     on_release: nav_drawer.set_state("open")

                        MDNavigationRailItem:
                            id: SidePannel_Account
                            # text: "Account"
                            icon: "account-circle"
                            on_release: app.LoginDialog()

                        MDNavigationRailItem:
                            id: SidePannel_Literature
                            # text: "Literature"
                            icon: "book"

                        MDNavigationRailItem:
                            id: SidePannel_Note
                            # text: "Note"
                            icon: "note-edit"

                        MDNavigationRailItem:
                            id: SidePannel_Settings
                            # text: "Settings"
                            icon: "cog"

                    MDBoxLayout:
             
                    ScreenManager:
                        id: screen_manager

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        elevation: 12
        close_on_click: True
        type: "modal"

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "MUG"
                text: "Drinking water with mug during the research will Make Us Great again!"
                title_font_size:"56dp"
                text_font_size: "12dp"
                spacing: "10dp"

            DrawerClickableItem:
                text: "Account"
                icon: "account-circle"
                on_release: app.LoginDialog()

            DrawerClickableItem:
                text: "Literature"
                icon: "book"

            DrawerClickableItem:
                text: "Note"
                icon: "note-edit"

            DrawerClickableItem:
                text: "Settings"
                icon: "cog"





